<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linear_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Thinking About Home Service?"
            android:layout_marginTop="45dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorWhite"
            android:text="Dont worry just login ang get service"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_two"
        android:layout_below="@+id/linear_layout_one"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/group1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_three"
        android:layout_below="@+id/linear_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="255dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="LOGIN"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:background="@drawable/button_backgroung_login_register"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="255dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Create An Account"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:background="@drawable/button_backgroung_login_register"/>
    </LinearLayout>
</RelativeLayout>