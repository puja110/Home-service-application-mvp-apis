<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:id="@+id/allServicesCard"
    app:cardBackgroundColor="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/seeAllServicesImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:src="@drawable/repair"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seeAllServicesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="AC Check Up"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/_20sdp"/>
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/roboto_regular"
                    android:text="AC Service and Repair"
                    android:textSize="12dp"
                    android:textColor="@color/colorGrey"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/seeAllServicesBtn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:text="ADD"
                    android:textAlignment="center"
                    android:background="@drawable/button_backgroung_rectangle"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_below="@id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>